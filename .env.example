# ========================================
# Discord Bot Configuration
# ========================================
TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_guild_id
ADMIN_ROLE_ID=your_admin_role_id
VERIFIED_ROLE_ID=your_verified_role_id

# ========================================
# Blockchain Configuration
# ========================================
NETWORK_PRIVATE_KEY=your_private_key_here
NETWORK_RPC_URL=https://your-rpc-url
NETWORK_CHAIN_ID=1
BOT_ADDRESS=0xYourBotWalletAddress
ETHERSCAN_API_KEY=your_etherscan_api_key
AMIS_ESCROW_ADDRESS=0xYourEscrowContractAddress
ESCROW_CONTRACT_ADDRESS=0xYourEscrowContractAddress
BOT_PRIVATE_KEY=your_bot_private_key_here

# ========================================
# Database Configuration
# ========================================

# Database Backend Selection:
# Set USE_LOCAL_PG to control which database is used:
# - "true"  = Use local PostgreSQL (recommended for development)
# - "false" = Use Supabase (recommended for production)
# - If not set, defaults based on NODE_ENV (development=local, production=Supabase)
USE_LOCAL_PG=true

# Local PostgreSQL Configuration (used when USE_LOCAL_PG=true):
# Use either CONNECTION_STRING or DATABASE_URL
CONNECTION_STRING=postgresql://username:password@localhost:5432/database_name
# Or use DATABASE_URL:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# SSL Configuration for PostgreSQL:
# Set to "true" if your PostgreSQL connection requires SSL
DATABASE_SSL=false

# Supabase Configuration (used when USE_LOCAL_PG=false or NODE_ENV=production):
# Required for production deployments
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# ========================================
# Wallet Server Configuration
# ========================================
JWT_SECRET=your_jwt_secret_key_here
CLIENT_URL=http://localhost:5173
VITE_SERVER_URL=http://localhost:3001
WALLET_SERVER_PORT=3001

# ========================================
# Environment & Debugging
# ========================================
NODE_ENV=development
DEBUG_MODE=true
